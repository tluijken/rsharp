<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>0.0.1</Version>
        <AssemblyVersion>0.0.1</AssemblyVersion>
        <PackageVersion>0.0.2</PackageVersion>
        <Description>Provides functional programming utilities, which should be recognizable for rust developers also using csharp.</Description>
        <PackageProjectUrl>https://github.com/tluijken/rsharp</PackageProjectUrl>
        <PackageIcon>icon.png</PackageIcon>
        <PackageTags>rust functional</PackageTags>
        <PackageReleaseNotes>Added ForEach</PackageReleaseNotes>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>
    <ItemGroup>
        <None Include="$([MSBuild]::GetPathOfFileAbove('README.md', '$(MSBuildThisFileDirectory)../../'))" Pack="true" PackagePath="\" />
        <None Update="icon.png" Pack="true" PackagePath="\" />
    </ItemGroup>
</Project>
